---
import Layout from '../layouts/Layout.astro';
import Logo from '../components/Logo.astro';
import Button from '../components/Button.astro';
import FeatureCard from '../components/FeatureCard.astro';
import Icon from '../components/Icon.astro';
import Cloud from '../components/Cloud.astro';
const APP_URL = 'https://app.getairstrip.com';

const features = [
  {
    icon: 'plus',
    title: 'SaaS Metrics Built In',
    description: 'Start with the inputs you actually have: ARPU, churn rate, new customers per month. Airstrip models the lag between metric changes and runway impact—the thing spreadsheets get wrong.'
  },
  {
    icon: 'users',
    title: 'Payroll Modeling',
    description: "Add employees with salaries, start and end dates. Hide roles to see what cuts do to runway. Play scenarios without touching your real books."
  },
  {
    icon: 'credit-card',
    title: 'Space for All Your Expenses',
    description: "Recurring costs, one-time expenses, Stripe fees, owner's draw, estimated tax payments. Everything accounted for."
  },
  {
    icon: 'activity',
    title: 'Multiple Inflow Streams',
    description: "MRR, annual plans, one-off capital injections, secondary recurring revenue. Model your business as it actually works, not how tools assume it does."
  },
  {
    icon: 'upload',
    title: 'Instant Scenario Sharing',
    description: 'Every variable encodes into the URL. Send your co-founder the optimistic scenario. Send your advisor the realistic one. No attachments, no "which version is this?"'
  },
  {
    icon: 'lock',
    title: 'Actually Private',
    description: "No backend. No login. No data harvesting. Your financial projections stay in your browser. We literally cannot see them."
  }
] as const;

const stats = [
  { value: '60', label: 'Month runway range' },
  { value: '∞', label: 'Saved scenarios' },
  { value: '$0', label: 'Totally free' },
  { value: '0', label: 'Data we collect' }
];

const airstripFeatures = [
  'Input six numbers, see your forecast',
  'Models churn math automatically',
  'Save unlimited scenarios',
  'Share via URL (no attachments)',
  'No integrations to maintain',
  'No login, no backend, no cost'
];
---

<Layout title="Airstrip – Startup Runway Calculator for SaaS Founders">
  <!-- Navigation -->
  <nav id="nav" class="fixed top-0 left-0 right-0 py-4 z-50 transition-[background-color,backdrop-filter,padding,border-color] duration-300 border-b border-transparent">
    <div class="max-w-5xl mx-auto px-6 flex justify-between items-center">
      <div id="nav-logo" class="origin-left transition-transform duration-300">
        <Logo imgSize={25} />
      </div>
      <div class="flex items-center gap-3">
        <a href="https://buymeacoffee.com/renniehaylock" target="_blank" rel="noopener noreferrer" class="text-sm font-medium text-blue-500 hover:text-white hover:bg-blue-500 px-2.5 py-1 rounded-[8px] transition-colors hidden sm:flex items-center gap-1" title="Buy me a coffee">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M10 2v2"/><path d="M14 2v2"/><path d="M16 8a1 1 0 0 1 1 1v8a4 4 0 0 1-4 4H7a4 4 0 0 1-4-4V9a1 1 0 0 1 1-1h14a2 2 0 1 1 0 4h-1"/><path d="M6 2v2"/></svg>
          Buy me a coffee
        </a>
        <a id="nav-cta" href={APP_URL} class="text-sm font-medium text-gray-800 px-2.5 py-1 rounded-[8px] transition-colors border border-transparent">
          Open App
        </a>
      </div>
    </div>
  </nav>

  <!-- Hero -->
  <section class="relative pt-28 pb-16 overflow-hidden">

    <div class="max-w-[1000px] mx-auto px-6 relative z-10 text-center">

      <div class="inline-flex items-center shadow-sm gap-2 text-sm text-gray-600 mb-6 bg-[rgba(255,255,255,0.3)] border border-[rgba(255,255,255,0.5)] rounded-full py-2 px-5">
        <span class="text-coral-500 font-medium font-semibold">Free</span>
        <span>·</span>
        <span>No login</span>
        <span>·</span>
        <span>No backend</span>
      </div>

      <h1 class="font-serif leading-[1.2] font-semibold text-[47px] text-gray-900 leading-tight mb-5">
        Startup runway calculator that<br />
        <em class="italic text-blue-500">actually</em> understands SaaS.
      </h1>

      <p class="text-gray-700 leading-[1.4] text-[24px] mb-12 max-w-xl mx-auto">
        Your SaaS metrics, expenses, and payroll—one chart,<br class="hidden sm:block" />
        one runway number. No spreadsheet, no<br class="hidden sm:block" />
        $2k/month enterprise tool.
      </p>

      <Button href={APP_URL}>
        Open Airstrip
        <Icon name="arrow-right" class="w-4 h-4" />
      </Button>

      <!-- App Screenshot -->
      <div class="mt-28 rounded-[18px] overflow-hidden bg-gradient-to-b from-[#C0D8FF] to-[#FFE5E1] border border-blue-500/20 p-2 md:p-5">
        <div class="rounded-xl overflow-auto" style="box-shadow: 0 0 0 1px #11182715, 0 2px 20px #11182730">
          <img
            src="/airstrip-dashboard.png"
            alt="Airstrip app interface showing cash flow forecast"
            class="w-[1064px] min-w-[600px]"
          />
        </div>
      <div/ >

      <!-- Cloud shapes -->
      <div class="absolute top-0 left-0 right-0 bottom-0 z-[-1] pointer-events-none">
        <Cloud scale={0.75} top="80px" left="-35px" rotate={-15} />
        <Cloud scale={0.6} top="160px" right="0" rotate={-10} flip />  
      </div>

    </div>
  </section>

  <!-- Problem Section -->
  <section id="how-it-works" class="py-20 md:py-28">
    <div class="max-w-5xl mx-auto px-6">
      <div class="text-[22px] text-coral-500 font-medium mb-3">The Problem</div>
      <h2 class="font-serif font-semibold text-[37px] md:text-4xl leading-tight">
        SaaS revenue isn't linear.<br class="hidden md:block" />
        Your runway calculator should know that.
      </h2>
      <p class="text-gray-600 max-w-3xl text-[20px] mt-8">
        When churn creeps up or acquisition slows down, MRR doesn't move in a straight line. The hit — or the bump, when things go well — is steepest in the first few months, then gradually flattens as the compounding plays out. Most founders don't see the shape of it until they've already hit the iceberg.
      </p>
      <p class="text-gray-600 max-w-3xl text-[20px] mt-8">
        The problem is, your brain sees the first two months and draws a straight line. But the curve flattens. So you end up cutting too deep or spending too fast — reacting to a future that was never going to happen.
      </p>
      <p class="text-gray-800 max-w-3xl text-[20px] mt-8 font-medium">
        To model this properly, you've had two options:
      </p>
      <div class="flex gap-6 mt-20 mb-40 justify-center">
        <!-- Spreadsheet Card -->
        <div class="w-[350px] max-w-full bg-white border border-gray-300 rounded-xl py-6 pb-8 px-7 shadow-sm max-w-md">
          <h3 class="font-semibold text-gray-800 mb-4 text-[18px]">The Spreadsheet from Hell</h3>
          <ul class="space-y-3 text-gray-600 text-sm">
            {[
              'Pull numbers from Baremetrics, QuickBooks, Gusto',
              'Build formulas that break when you look at them',
              'Update monthly (if you remember)',
              'Lose track of which version is current',
              'Cry softly when someone asks for a scenario'
            ].map((item) => (
              <li class="flex gap-3">
                <span class="text-red-500 font-reg shrink-0 text-[30px]">×</span>
                {item}
              </li>
            ))}
          </ul>
        </div>

        <!-- Enterprise Card -->
        <div class="w-[350px] max-w-full bg-white border border-gray-300 rounded-xl py-6 pb-8 px-7 shadow-sm max-w-md">
          <h3 class="font-semibold text-gray-800 mb-4 text-[18px]">Enterprise FP&A Tools</h3>
          <ul class="space-y-3 text-gray-600 text-sm">
            {[
              '$500–$2,000/month minimum',
              'Require integrating every system',
              'Need a finance person to configure',
              'Built for 50-person companies',
              'Weeks long onboarding process'
            ].map((item) => (
              <li class="flex gap-3">
                <span class="text-red-500 font-reg shrink-0 text-[30px]">×</span>
                {item}
              </li>
            ))}
          </ul>
        </div>
      </div>

      <!-- Airstrip Card -->
      <div class="bg-gradient-to-br from-[#FF907E] to-[#8EBAFF] max-w-full w-[550px] mx-auto p-[10px] md:p-[23px] rounded-[30px] md:rounded-[45px]">
        <div class="bg-white shadow-[0_2px_20px_#11182730] rounded-[22px]">
          <div class="px-8 py-6 border-b border-gray-300">
            <div class="flex items-center gap-2">
              <span class="text-[30px] text-gray-800">With</span>
              <Logo iconOnly imgSize={25} />
              <span class="text-[30px] text-gray-80 font-semibold">Airstrip</span>
            </div>
            <p class="text-gray-900 text-[20px]">Enter your numbers. See your runway.</p>  
          </div>
          <div class="px-8 pt-10 pb-16">
            <ul class="space-y-3 text-left max-w-sm">
              {airstripFeatures.map((item) => (
                <li class="flex items-center gap-3 text-gray-700 text-[20px]">
                  <svg class="w-6 h-6 text-green-500 shrink-0 mt-0.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.7" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="20 6 9 17 4 12" />
                  </svg>
                  {item}
                </li>
              ))}
            </ul>
          </div>
          <div class="px-8 py-6 border-t flex justify-center border-gray-300">
            <Button href={APP_URL}>
              Open Airstrip
              <Icon name="arrow-right" class="w-4 h-4" />
            </Button>      
          </div>

        </div>
  
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 md:py-28">
    <div class="max-w-5xl mx-auto px-6">
      <div class="text-[22px] text-blue-500 font-medium mb-3">Features</div>
      <h2 class="font-serif text-[37px] md:text-4xl leading-tight mb-3 font-semibold">
        Your metrics in. Your runway out.
      </h2>
      <p class="text-gray-600 max-w-2xl mb-12 text-[20px]">
        Everything you'd need Baremetrics + QuickBooks + Gusto +<br class="hidden sm:block" />
        a spreadsheet to calculate runway—in one chart.
      </p>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-5">
        {features.map(({ icon, title, description }) => (
          <FeatureCard title={title} description={description}>
            <Icon slot="icon" name={icon} class="w-5 h-5 text-coral-500" />
          </FeatureCard>
        ))}
      </div>
    </div>
  </section>

  <!-- Founder Section -->
  <section class="py-20 md:py-28">
    <div class="max-w-5xl mx-auto px-6">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <div>
          <div class="text-7xl text-coral-500 font-serif leading-none mb-4">"</div>
          <blockquote class="text-3xl text-gray-900 leading-[1.5] italic -mt-8">
            I built Airstrip to calculate runway at Huntr, my B2C SaaS company. After 8 years of maintaining a spreadsheet that pulled from Baremetrics, QuickBooks, and Gusto; I finally made the leap and built the tool I actually needed.
          </blockquote>
          <p class="mt-6 text-gray-600">
            – Rennie Haylock, founder of <a href="https://huntr.co" target="_blank" class="text-coral-500 hover:underline">Huntr</a>
          </p>
        </div>

        <div class="grid grid-cols-2 gap-4">
          {stats.map(({ value, label }) => (
            <div class="text-center p-6 h-[130px] flex flex-col justify-center bg-gray-50 rounded-xl border border-gray-300">
              <div class="text-3xl md:text-4xl font-semibold text-coral-500">{value}</div>
              <div class="text-sm text-gray-800 mt-1">{label}</div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 md:py-28 relative overflow-hidden">
    <!-- Sky gradient background -->
    <div class="absolute inset-0" />

    <div class="max-w-3xl mx-auto px-6 relative z-10 text-center">
      <div class="text-[22px] text-coral-500 font-medium mb-3">Get Started</div>
      <h2 class="font-semibold text-[40px] leading-tight mb-6">
        Stop duct-taping Baremetrics to<br class="hidden sm:block" />
        QuickBooks to a spreadsheet.
      </h2>
      <p class="text-gray-600 max-w-xl mx-auto mb-12 text-[23px]">
        See where your runway is actually headed. No signup, no credit card, no "let's schedule a demo."
      </p>

      <Button href={APP_URL}>
        Open Airstrip
        <Icon name="arrow-right" class="w-4 h-4" />
      </Button>
    </div>
  </section>

  <!-- Footer -->
  <footer class="pt-36 pb-10 text-center text-gray-500 text-md">
    <div class="max-w-5xl mx-auto px-6">
      <p class="text-gray-800 mb-1 font-medium">
        Built by <a href="https://renniehaylock.com" target="_blank" class="text-blue-500 font-semibold hover:underline">Rennie Haylock</a> from <a href="https://huntr.co" target="_blank" class="text-purple-500 font-semibold hover:underline">Huntr</a>
      </p>
      <p class="text-sm">
        I built this for myself; I'm keeping it free because every founder deserves a clear runway.
    </div>
  </footer>
  <!-- Sky gradient background -->
  <div class="absolute inset-0 bg-gradient-to-b from-[#DFEBFF] to-white h-[300vh] z-[-99] pointer-events-none" />

  <script>
    const nav = document.getElementById('nav')!;
    const logo = document.getElementById('nav-logo')!;
    const cta = document.getElementById('nav-cta')!;
    const scrolled = () => window.scrollY > 20;
    const update = () => {
      const s = scrolled();
      nav.classList.toggle('bg-white/20', s);
      nav.classList.toggle('backdrop-blur-md', s);
      nav.classList.toggle('py-1', s);
      nav.classList.toggle('py-4', !s);
      nav.classList.toggle('border-gray-200', s);
      nav.classList.toggle('border-transparent', !s);
      logo.style.transform = s ? 'scale(0.85)' : 'scale(1)';
      cta.style.backgroundColor = s ? '#FF6045' : 'transparent';
      cta.style.color = s ? '#fff' : '';
      cta.style.border = s ? '1px solid #E54D34' : 'none';
      cta.onmouseenter = s ? () => cta.style.backgroundColor = '#E54D34' : null;
      cta.onmouseleave = s ? () => cta.style.backgroundColor = '#FF6045' : null;
    };
    window.addEventListener('scroll', update, { passive: true });
    update();
  </script>
</Layout>
